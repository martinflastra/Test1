  <script>
    var pregunta1 = document.getElementsByName("pregunta1");
    var pregunta2 = document.getElementsByName("pregunta2");
    var excelente = 0;
    var bueno = 0;
    var regular = 0;
    var malo = 0;
    var si = 0;
    var no = 0;
    document.getElementsByTagName("form")[0].onsubmit = function() {
      for (var i = 0; i < pregunta1.length; i++) {
        if (pregunta1[i].checked) {
          if (pregunta1[i].value == "Excelente") {
            excelente++;
          } else if (pregunta1[i].value == "Bueno") {
            bueno++;
          } else if (pregunta1[i].value == "Regular") {
            regular++;
          } else if (pregunta1[i].value == "Malo") {
            malo++;
          }
        }
      }
      for (var i = 0; i < pregunta2.length; i++) {
        if (pregunta2[i].checked) {
          if (pregunta2[i].value == "Sí") {
            si++;
          } else if (pregunta2[i].value == "No") {
            no++;
          }
        }
      }
